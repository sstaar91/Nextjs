{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@_assets/*": ["src/assets/*"],
      "@_constants/*": ["src/constants/*"],
      "@_components/*": ["src/components/*"],
      "@_hooks/*": ["src/hooks/*"],
      "@_lib/*": ["src/lib/*"],
      "@_styles/*": ["src/styles/*"],
      "@_types/*": ["src/types/*"],
      "@_utils/*": ["src/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
